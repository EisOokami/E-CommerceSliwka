{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "name": {
      "type": "string",
      "required": true
    },
    "sliderImages": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "text",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "isDiscount": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "discountedPrice": {
      "type": "decimal",
      "required": false,
      "default": 0,
      "min": 0
    },
    "finalPrice": {
      "type": "decimal"
    },
    "averageRating": {
      "type": "decimal",
      "default": 0,
      "min": 0,
      "max": 5
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "category": {
      "type": "component",
      "component": "components.category",
      "repeatable": false,
      "required": true
    },
    "productSpecs": {
      "type": "component",
      "component": "components.product-specifications",
      "repeatable": true,
      "required": true
    },
    "productInfo": {
      "type": "component",
      "component": "components.product-info",
      "repeatable": false,
      "required": true
    },
    "detailedSpecifications": {
      "type": "component",
      "component": "components.detailed-specifications",
      "repeatable": true,
      "required": true
    },
    "reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review",
      "mappedBy": "product"
    },
    "carts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::cart.cart",
      "mappedBy": "product"
    },
    "wishlist": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::wishlist.wishlist",
      "mappedBy": "product"
    },
    "options": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::option.option",
      "mappedBy": "product"
    },
    "colors": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::color.color",
      "mappedBy": "product"
    }
  }
}
