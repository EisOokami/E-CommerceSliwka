{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "name": {
      "type": "string"
    },
    "price": {
      "type": "float"
    },
    "sliderImages": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "description": {
      "type": "text"
    },
    "colors": {
      "type": "component",
      "repeatable": true,
      "component": "components.array"
    },
    "options": {
      "type": "component",
      "repeatable": true,
      "component": "components.array"
    },
    "productInfo": {
      "type": "component",
      "repeatable": false,
      "component": "components.product-info"
    },
    "productSpecs": {
      "type": "component",
      "repeatable": true,
      "component": "components.product-specifications"
    },
    "discountedPrice": {
      "type": "float"
    },
    "isDiscount": {
      "type": "boolean",
      "default": false
    },
    "detailedSpecifications": {
      "type": "component",
      "repeatable": true,
      "component": "components.detailed-specifications"
    },
    "category": {
      "type": "component",
      "repeatable": false,
      "component": "components.category"
    },
    "averageRating": {
      "type": "decimal",
      "default": 0
    },
    "finalPrice": {
      "type": "decimal"
    },
    "reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review",
      "mappedBy": "product"
    },
    "carts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::cart.cart",
      "mappedBy": "product"
    },
    "wishlist": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::wishlist.wishlist",
      "mappedBy": "product"
    }
  }
}
