{
  "kind": "collectionType",
  "collectionName": "colors",
  "info": {
    "singularName": "color",
    "pluralName": "colors",
    "displayName": "Color",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "colorName": {
      "type": "string",
      "required": true
    },
    "colorHex": {
      "type": "string",
      "default": "#",
      "minLength": 4,
      "maxLength": 7,
      "required": true,
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    },
    "priceDifference": {
      "type": "decimal",
      "required": true,
      "default": 0,
      "min": 0
    },
    "sliderImages": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "colors"
    },
    "carts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::cart.cart",
      "mappedBy": "color"
    }
  }
}
